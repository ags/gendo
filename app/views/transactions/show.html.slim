section.content
  .row
    .small-12.columns
      table
        thead
          tr
            th Source
            th Path
            th Status
        tbody
          tr
            td= link_to @transaction.source.name, app_source_path(@transaction.source.app, @transaction.source)
            td= @transaction.path
            td= @transaction.status

      table
        thead
          tr
            th Started At
            th Ended At
            th DB Runtime
            th View Runtime
            th Duration
        tbody
          tr
            td= @transaction.started_at
            td= @transaction.ended_at
            td= @transaction.db_runtime
            td= @transaction.view_runtime
            td= @transaction.duration

      table
        thead
          tr
            th Started At
            th Ended At
            th Duration
        tbody
          - @transaction.events.each do |event|
            tr
              td= event.started_at
              td= event.ended_at
              td= event.duration
              td= event.name if event.respond_to?(:name)
              td= event.respond_to?(:sql) ? event.sql : event.identifier

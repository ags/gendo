<%= form_for form, url: users_url, method: :post, class: 'form-horizontal' do |f| %>
  <% if form.errors.any? %>
    <ul>
      <% form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, placeholder: "me@example.com", class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, placeholder: "something secure!", class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>

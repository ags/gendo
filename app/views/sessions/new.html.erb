<%= form_for sign_in_form, url: sign_in_url, method: :post, class: 'form-horizontal' do |f| %>
  <% if sign_in_form.errors.any? %>
    <ul>
      <% sign_in_form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Login", class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>

<h2>New App</h2>

<%= form_for new_app_form, url: apps_url, method: :post, class: 'form-horizontal' do |f| %>
  <% if new_app_form.errors.any? %>
    <ul>
      <% new_app_form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, placeholder: "my app name", class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
